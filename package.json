{
  "name": "anki-overdrive-server",
  "version": "1.0.0",
  "description": "Scans, reads and writes message to anki overdrive vehilces, using the developer API.",
  "author": "Adrian Weber <adrian.weber@msg.group>",
  "license": "MIT",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "tsc -p test/ && mocha test/unit/**/*.spec.js --exit",
    "test:coverage": "nyc npm t",
    "start": "node ./dist/index.js",
    "dev": "npm run build & npm run start -- dev",
    "build": "tsc"
  },
  "nyc": {
    "exclude": [
      "node_modules/**",
      "test/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "anki-overdrive-api": "file:../anki-overdrive-api",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "kafka-node": "^3.0.1",
    "log4js": "^3.0.6"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.0",
    "@types/express": "^4.11.1",
    "@types/kafka-node": "^2.0.7",
    "@types/mocha": "^2.2.46",
    "@types/node": "^8.5.7",
    "@types/sinon": "^4.1.3",
    "chai": "^4.1.2",
    "mocha": "^4.1.0",
    "nyc": "^11.4.1",
    "sinon": "^4.2.1",
    "source-map-support": "^0.5.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "typings": "^1.3.1"
  }
}
